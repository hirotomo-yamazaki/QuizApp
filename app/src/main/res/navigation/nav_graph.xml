<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.quizapp.fragment.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_tryQuizFragment"
            app:destination="@id/tryQuizFragment" />
        <action
            android:id="@+id/action_titleFragment_to_quizListFragment"
            app:destination="@id/quizListFragment" />
    </fragment>
    <fragment
        android:id="@+id/makeQuizFragment"
        android:name="com.example.quizapp.fragment.MakeQuizFragment"
        android:label="fragment_make_quiz"
        tools:layout="@layout/fragment_make_quiz" >
        <action
            android:id="@+id/action_makeQuizFragment_to_quizListFragment"
            app:destination="@id/quizListFragment" />
    </fragment>
    <fragment
        android:id="@+id/tryQuizFragment"
        android:name="com.example.quizapp.fragment.TryQuizFragment"
        android:label="fragment_try_quiz"
        tools:layout="@layout/fragment_try_quiz" />
    <fragment
        android:id="@+id/quizListFragment"
        android:name="com.example.quizapp.fragment.QuizListFragment"
        android:label="fragment_quiz_list"
        tools:layout="@layout/fragment_quiz_list" >
        <action
            android:id="@+id/action_quizListFragment_to_makeQuizFragment"
            app:destination="@id/makeQuizFragment" />
    </fragment>
</navigation>